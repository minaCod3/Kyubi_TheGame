<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WheelActivity"
    android:background="@android:color/black"
    android:padding="10dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/goBack2"
        android:layout_width="219dp"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-39dp"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="572dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="go_back.json"
        app:lottie_loop="true" />

    <Button
        android:id="@+id/btnBack2"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="center|clip_vertical|center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="â†" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/wheel"
        android:layout_centerInParent="true"
        android:src="@drawable/yeahwheel"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/wheel"
        android:src="@drawable/arrow"
        android:layout_marginBottom="1dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/quicksand_medium"
        android:includeFontPadding="false"
        android:onClick="spinWheel"
        android:text="gira"
        android:textColor="@android:color/white"

        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="@font/quicksand_medium"
        android:textAlignment="center"
        android:layout_below="@id/wheel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:id="@+id/txtv"
        />

</RelativeLayout>